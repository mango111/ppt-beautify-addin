<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.0</Version>
  <ProviderName>PPT Beautify</ProviderName>
  <DefaultLocale>zh-CN</DefaultLocale>
  <DisplayName DefaultValue="PPT 一键美化"/>
  <Description DefaultValue="AI 自动美化你的 PPT"/>
  <IconUrl DefaultValue="https://mango111.github.io/ppt-beautify-addin/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://mango111.github.io/ppt-beautify-addin/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://github.com/mango111/ppt-beautify"/>
  
  <Hosts>
    <Host Name="Presentation"/>
  </Hosts>
  
  <DefaultSettings>
    <SourceLocation DefaultValue="https://mango111.github.io/ppt-beautify-addin/taskpane.html"/>
  </DefaultSettings>
  
  <Permissions>ReadWriteDocument</Permissions>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Presentation">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="BeautifyGroup">
                <Label resid="CommandsGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="BeautifyButton">
                  <Label resid="BeautifyButton.Label"/>
                  <Supertip>
                    <Title resid="BeautifyButton.Label"/>
                    <Description resid="BeautifyButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>BeautifyTaskpane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://mango111.github.io/ppt-beautify-addin/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://mango111.github.io/ppt-beautify-addin/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://mango111.github.io/ppt-beautify-addin/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://mango111.github.io/ppt-beautify-addin/taskpane.html"/>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://github.com/mango111/ppt-beautify"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="开始使用 PPT 美化"/>
        <bt:String id="CommandsGroup.Label" DefaultValue="AI 美化"/>
        <bt:String id="BeautifyButton.Label" DefaultValue="一键美化"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="点击「一键美化」按钮，AI 自动优化你的 PPT"/>
        <bt:String id="BeautifyButton.Tooltip" DefaultValue="使用 AI 自动美化当前 PPT 的排版和配色"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
